<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/prof"
        android:layout_width="80dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:src="@drawable/sq"
        />
    <TextView
        android:id="@+id/avc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="3dp"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@+id/prof"
        android:text=""/>

    <RelativeLayout
        android:id="@+id/keo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       android:background="@drawable/dsnmun"
        android:layout_marginBottom="2dp"
        android:layout_below="@+id/avc">
        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="13dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="Sign Up"
            android:textColor="#fff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/keo">
    <TextView
        android:id="@+id/as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:textColor="#fff"
       android:textSize="13dp"
        android:textStyle="italic"
        android:text="Already Register ?"/>
        <TextView
            android:id="@+id/as1"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_marginBottom="4dp"
            android:layout_centerHorizontal="true"
            android:textSize="14dp"
            android:textStyle="italic"
            android:text="Already Register ?"/>
    <TextView
        android:id="@+id/inn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/as"
        android:text="Sign In"
        android:layout_marginLeft="4dp"
       android:textSize="13dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#FFD24A"

        />
    </RelativeLayout>

</RelativeLayout>