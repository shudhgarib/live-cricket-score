<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dsn4"
        android:id="@+id/mf10"
        >


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mf"
            >

            <RelativeLayout
                android:id="@+id/mb"
               android:padding="10dp"
                android:layout_marginLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >



                <TextView
                    android:id="@+id/team1"
                    android:layout_below="@+id/matchno"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="ICC Mens T20 World Cup 2021"
                    android:layout_marginTop="2dp"
                    android:textColor="#F70B0A0A"
                    android:textSize="17dp"
                    />
                <TextView
                    android:id="@+id/team2"
                    android:layout_below="@+id/team1"

                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="Oct 17 - Nov 14 (2021)"


                    android:textSize="13dp"
                    />





            </RelativeLayout>




        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.ads.nativetemplates.TemplateView
        android:id="@+id/my_template"
        android:visibility="gone"
        android:layout_below="@+id/mf10"
        app:gnt_template_type="@layout/gnt_small_template_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>