<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dsn4"
        android:id="@+id/mf10"
        >


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mf"
            >

            <RelativeLayout
                android:id="@+id/mb"
               android:padding="10dp"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:id="@+id/imm"
                android:layout_marginTop="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_flag_pakistan"/>

                <TextView
                    android:id="@+id/head"
                    android:layout_below="@+id/matchno"
                    android:layout_toEndOf="@+id/imm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="3.2sp"
                    android:gravity="center_vertical"
                    android:text="ICC Mens T20 World Cup 2021"
                    android:layout_marginTop="0dp"
                    android:textColor="#F70B0A0A"
                    android:textSize="18dp"
                    />
                <TextView
                    android:id="@+id/sub"
                    android:layout_below="@+id/head"
                    android:layout_toEndOf="@+id/imm"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="3dp"
                    android:gravity="center_vertical"
                    android:text="Oct 17 - Nov 14 (2021)"


                    android:textSize="14dp"
                    />





            </RelativeLayout>




        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.ads.nativetemplates.TemplateView
        android:id="@+id/my_template"
        android:visibility="gone"
        android:layout_below="@+id/mf10"
        app:gnt_template_type="@layout/gnt_small_template_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>