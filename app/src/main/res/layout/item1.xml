<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dsn"
        android:id="@+id/news"
        >

        <RelativeLayout


            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/mf11"

            >
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:id="@+id/point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:gravity="center_vertical"
                    android:text="Sports"
                    android:textColor="#f7151515"
                    android:textSize="14dp" />



            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/mf"
            android:layout_below="@+id/mf11"
            >

            <ImageView
                android:id="@+id/imgnews"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="centerCrop" />



        </RelativeLayout>
        <RelativeLayout

            android:layout_below="@+id/mf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mf1"

            >
            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                >


                <TextView
                    android:id="@+id/schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="3.7sp"
                    android:text="Schedule"
                    android:textColor="#f7151515"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/schedule1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/schedule"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="9dp"
                    android:fontFamily="arial"
                    android:gravity="center_vertical"
                    android:maxLength="50"
                    android:text="Schedule"
                    android:textSize="13dp" />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.ads.nativetemplates.TemplateView
        android:id="@+id/my_template"
        android:visibility="gone"
        android:layout_below="@+id/news"
        app:gnt_template_type="@layout/gnt_medium_template_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>