<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dsn2m"
        android:backgroundTint="#fff"
        android:id="@+id/news"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/mf"

            >


            <ImageView
                android:id="@+id/imgnews"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/stem" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/playim"
                android:layout_centerHorizontal="true"/>



        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/mf1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/mf"

            >

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true">


                <TextView
                    android:id="@+id/schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="1dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="1sp"
                    android:text="Schedule"
                    android:textColor="#f7151515"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/schedule1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/schedule"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="9dp"
                    android:fontFamily="arial"
                    android:gravity="center_vertical"
                    android:maxLength="50"
                    android:text="Schedule"
                    android:textSize="12dp" />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.ads.nativetemplates.TemplateView
        android:id="@+id/my_template"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        android:layout_below="@+id/news"
        app:gnt_template_type="@layout/gnt_small_template_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>