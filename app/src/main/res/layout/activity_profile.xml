<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F2F2"
    tools:context=".profile">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_app_bar"
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="-10dp"
        android:layout_height="wrap_content"


        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <ImageView
            android:id="@+id/kar"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11.3dp"
            android:gravity="top"
            android:src="@drawable/back"
            />

        <TextView
            android:id="@+id/tt1"
            android:layout_toEndOf="@+id/kar"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="11dp"
            android:gravity="center_vertical"
            android:text=""

            android:textColor="#ffffff"
            android:textSize="20dp"
            />
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_app_bar"
        android:layout_marginTop="2dp"
        android:id="@+id/mf10"
        >


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mf"
            >

            <RelativeLayout
                android:id="@+id/mb"
                android:padding="10dp"
                android:background="#fff"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"

                    android:layout_marginLeft="7dp"
                    android:id="@+id/icon"
                    android:src="@drawable/sq"
                    android:layout_height="80dp"/>

                <TextView
                    android:id="@+id/team1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="15dp"
                    android:layout_toEndOf="@+id/icon"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:text="M S Dhoni"
                    android:textColor="#f7151515"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/team2"
                    android:layout_below="@+id/team1"
                    android:layout_toEndOf="@+id/icon"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="M S Dhoni"
                    android:lineSpacingExtra="2dp"
                    android:textSize="15dp"
                    />

                <RelativeLayout
                    android:id="@+id/mot21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/team2"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="11dp"
                    android:layout_toEndOf="@+id/icon"
                    android:background="@drawable/dsn2m">


                    <TextView
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="7dp"
                        android:layout_toEndOf="@+id/pto"
                        android:text="Edit Profile"
                        android:textColor="@color/colorAccent"
                        android:textSize="14dp" />
                </RelativeLayout>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/mb"
                android:id="@+id/ttl"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Approved Post"
                    android:textAllCaps="true"
                    android:textColor="#111"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ttl"
                android:layout_marginLeft="0dp">


            </androidx.recyclerview.widget.RecyclerView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recyclerview1"
                android:layout_marginLeft="0dp">


            </androidx.recyclerview.widget.RecyclerView>




        </RelativeLayout>











    </RelativeLayout>

</RelativeLayout>