<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="11"
        android:padding="6dp"
        android:id="@+id/tabllayout"
        android:background="#fff"
        >

        <RelativeLayout
            android:layout_width="160sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="45dp"
                android:id="@+id/icon"
                android:src="@drawable/ic_launcher_background"
                android:layout_height="35dp"/>

            <TextView

                android:id="@+id/stricker_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/icon"
                android:fontFamily="sans-serif-medium"
                android:text="Ravichandran Aswin"
                android:textColor="#021E57"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aus"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/icon"
                android:layout_below="@id/stricker_player"
                android:id="@+id/stricker_player1"
                android:layout_marginLeft="5dp"

                android:textSize="11dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/stricker_player_run"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="R23"
                android:textColor="#111"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="30dp"
            android:layout_marginLeft="9dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/stricker_player_bowl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B12"
android:layout_centerHorizontal="true"
                android:textColor="#2C2929"
                android:textSize="14dp"
                android:fontFamily="sans-serif" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="20dp"
            android:layout_marginLeft="9dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/stricker_player_4s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="4s"
                android:textSize="14dp"
                android:textColor="#2C2929"
                android:fontFamily="sans-serif" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="20dp"
            android:layout_marginLeft="11dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/stricker_player_6s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="6s"
                android:textColor="#2C2929"
                android:textSize="14dp"
                android:fontFamily="sans-serif" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="45dp"

            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/stricker_player_sr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"

                android:text="123.45"
                android:textColor="#2C2929"
                android:textSize="14dp"

                android:fontFamily="sans-serif" />

        </RelativeLayout>



    </LinearLayout>
    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#D3CDCD"

        />

</RelativeLayout>