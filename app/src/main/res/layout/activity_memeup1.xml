<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"

    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dsn"
        android:id="@+id/news"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mf11"
            android:background="#FBF9F9"
            >
            <RelativeLayout
                android:id="@+id/motr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="43dp"
                    android:id="@+id/icc"
                    android:src="@drawable/stt"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="center_vertical"
                    android:fontFamily="sans-serif-medium"
                    android:layout_toEndOf="@+id/icc"
                    android:text="Points Table"
                    android:maxLength="20"
                    android:textColor="#f7151515"
                    android:textSize="15.5dp" />
                <TextView
                    android:id="@+id/point1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_toEndOf="@+id/icc"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/point"
                    android:gravity="center_vertical"
                    android:fontFamily="sans-serif-medium"
                    android:text="CrickLive"
                    android:textColor="#f7151515"
                    android:textSize="10.5dp" />


                <RelativeLayout
                    android:visibility="invisible"
                    android:id="@+id/postrel"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/dsnmun"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="POST"
                    android:textColor="#ffffff"
                    android:layout_marginRight="10dp"
                   />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/post1rel"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/dsnmun1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/post1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:text="POST"
                        android:textColor="#ffffff"
                        android:layout_marginRight="10dp"
                        />
                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputEmail1"
            android:layout_below="@+id/mf11"
            style="@style/parent"
            android:layout_marginTop="3dp"
            >

            <EditText
                android:id="@+id/title"
                style="@style/modifiedEditText"
                android:hint="Add Title"
                android:shadowColor="@color/colorPrimaryDark"
                android:inputType="text"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputEmail"
            android:layout_below="@+id/textInputEmail1"
            style="@style/parent"
            android:layout_marginTop="3dp"
            >

            <EditText
                android:id="@+id/name"
                style="@style/modifiedEditText"
                android:hint="Type Category (ex- Icc T20 World cup , Ipl 2022)"
                android:shadowColor="@color/colorPrimaryDark"
                android:inputType="text"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputEmail"
            android:layout_marginTop="4dp"
            android:id="@+id/mot2">
            <EditText
                android:id="@+id/caption"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:inputType="textMultiLine"
                android:hint="Write ........"
                android:textColorHint="#CAC4C4"
                android:textSize="14dp"
                android:backgroundTint="#fff"
                android:lineSpacingExtra="2sp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                android:textColor="#353232"
                android:fontFamily="sans-serif"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/mot21"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/mot2"
            android:layout_marginLeft="7dp"
            android:background="@drawable/dsn2m"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pto"
                android:id="@+id/pto"
                android:layout_marginLeft="7dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/pto"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:text="Add Image"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"
                android:layout_marginRight="7dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/mot212"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/mot21"
            android:layout_below="@+id/mot2"
            android:layout_marginLeft="10dp"
            android:background="@drawable/dsn2m"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cats"
                android:id="@+id/cto"
                android:layout_marginLeft="7dp"
                android:layout_centerVertical="true"/>

            <Spinner
                android:id="@+id/categ"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/cto"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4.5dp"
                android:layout_marginBottom="3dp"
                android:autofillHints="asd"
                android:text="Add Category"
                android:textColor="@color/colorAccent"

                android:layout_marginRight="7dp"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/mot21"
            android:layout_width="match_parent"
            android:id="@+id/mf"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/backing"
                />

        </LinearLayout>


    </RelativeLayout>

    <com.google.android.ads.nativetemplates.TemplateView
        android:id="@+id/my_template"
        android:visibility="gone"
        android:layout_below="@+id/news"
        app:gnt_template_type="@layout/gnt_medium_template_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>

</ScrollView>