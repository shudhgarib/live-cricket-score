                        android:textSize="17dp"
                        android:fontFamily="sans-serif" />
                </RelativeLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ptm"
                    android:layout_marginTop="3dp"
                    android:background="#fff"
                    android:id="@+id/pts">
                    <TextView
                        android:id="@+id/ptstitle"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="PLAYER OF THE SERIES"
                        android:layout_marginLeft="15dp"
                        android:textColor="#222"
                        android:textSize="13dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="13dp"
                        android:layout_width="50dp"
                        android:layout_below="@+id/ptstitle"
                        android:id="@+id/icon1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_launcher_background"
                        android:layout_height="48dp"/>

                    <TextView
                        android:id="@+id/plr1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/icon1"
                        android:text="Ravichandran Aswin"
                        android:textColor="#0C1D61"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="6dp"
                        android:layout_below="@+id/ptstitle"
                        android:textSize="17dp"
                        android:fontFamily="sans-serif" />


                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@+id/pts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/comment"
                    android:background="@drawable/dsn44"
                    android:layout_marginTop="1dp"
                    android:dividerHeight="0.5dp"/>
                <LinearLayout
                    android:id="@+id/vm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/comment"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:background="@color/colorPrimaryDark"
                    android:padding="6dp"
                    android:weightSum="11">

                    <RelativeLayout
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/load"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="View More"
                            android:textColor="#fff"
                            android:textSize="14dp" />

