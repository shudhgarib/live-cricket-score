        </RelativeLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_below="@+id/tip"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#C7EACD"

                    android:padding="3dp"
                    android:id="@+id/tabllayout"
                    >

                    <RelativeLayout
                        android:layout_width="165dp"
                        android:layout_marginLeft="14dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Batsman"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#202022"
                            android:id="@+id/stricker_player"
                            android:textSize="14dp"
                            />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"


                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="R"

                            android:layout_centerHorizontal="true"
                            android:id="@+id/stricker_player_run"
                            android:gravity="center"
                            android:textColor="#222"
                            android:textSize="14dp"
                            />

                    </RelativeLayout>
                    <RelativeLayout

                        android:layout_width="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="B"
                            android:textSize="14dp"
                            android:textColor="#222"
                            android:id="@+id/stricker_player_bowl"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/stricker_player_4s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4s"
                            android:textColor="#222"
                            android:textSize="14dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/stricker_player_6s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="6s"
                            android:textColor="#222"
                            android:textSize="14dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="40dp"

                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SR"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="7dp"
                            android:textColor="#222"
                            android:textSize="14dp"
                            android:id="@+id/stricker_player_sr"

                            />

                    </RelativeLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@+id/tabllayout"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:id="@+id/list_view"
                    android:background="#fff"
                    android:layout_marginTop="0dp"
                    android:dividerHeight="0.5dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@+id/list_view"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_view_second"
                    android:background="#fff"

                    android:layout_marginTop="0dp"
                    android:dividerHeight="0.5dp"/>
